{% extends "CDPlatformBundle::layout.html.twig" %}

{% block title %}
    Profil - {{ parent() }}
{% endblock %}

{% block body %}
    {% if (user) %}
        <h1 class="my-4">Profil de {{ user.username }}</h1>

        <h2>Projets traduits</h2>
        {% if (projects) %}
            <div class="table-responsive">
                <table class="table">
                    <thead>
                        <tr>
                            <th scope="col">Nom du projet</th>
                            <th scope="col">Nombre de source</th>
                            <th scope="col">Nombre de source traduites par {{ user.username }}</th>
                        </tr>
                    </thead>
                    <tbody>
                        {% for p in projects %}
                            <tr>
                                <th scope="row">{{ p.source.project.name }}</th>
                                <td>{{ total }}</td>
                                <td>{{ total_user }}</td>
                            </tr>
                        {% endfor %}
                    </tbody>
                </table>
                </div><br />
        {% else %}
            <p>Aucun</p>
        {% endif %}
        <h2>Langues de l'utilisateur</h2>
        <form>
          <div class="form-group">
            <select multiple class="form-control">
                {% for lang in user.getLangs() %}
                    <option>{{lang.code}}</option>
                {% endfor %}
            </select>
          </div>
        </form>
        <h2>Description</h2>
        <form>
            <div class="form-group">
              <textarea class="form-control" rows="3" readonly>{{user.description}}</textarea>
            </div>
        </form>
    {% else %}
        <h1 class="text-center my-4">Utilisateur introuvable</h1>
    {% endif %}
{% endblock %}
