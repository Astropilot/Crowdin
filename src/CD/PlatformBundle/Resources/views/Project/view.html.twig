{% extends "CDPlatformBundle::layout.html.twig" %}

{% block title %}
	Projet - {{ parent() }}
{% endblock %}

{% block cdplatform_body %}

	<h1 class="my-4">Projet
		<small>{{ project.getName() }}</small>
	</h1>

    <h2>Récapitulatif</h2>

    <p>Date de création: {{ project.date | date('d/m/Y') }}</p>
    <p>Langue du projet: {{ project.getLang().code }}</p>
    <p>Nombre de sources: {{ sources | length }}</p>
    {% if project.getFrozen() %}
        <p>Project actuellement mis en pause</p>
    {% else %}
        <p>Project actuellement disponible</p>
    {% endif %}

    <div class="col-4">
        <canvas id="sourcesChart" width="200" height="200"></canvas>
    </div>

    <h2>Liste des sources</h2>
    {% if (sources) %}
        <div class="table-responsive">
            <table class="table">
                <thead>
                    <tr>
                        <th scope="col">Nom de la source</th>
                        <th scope="col">Nombre de traduction</th>
                        <th scope="col">Actions</th>
                    </tr>
                </thead>
                <tbody>
                    {% for source in sources %}
                        <tr>
                            <th scope="row">{{ source.source }}</th>
                            <td>{{ source.getTargets() | length }}</td>
                            <td>
                                <a href="{{ path('project_source', {'idproj': project.id, 'ids': source.id}) }}" class="btn btn-primary" role="button">Voir les traductions</a>
                            </td>
                        </tr>
                    {% endfor %}
                </tbody>
            </table>
            </div><br />
    {% else %}
        <p>Aucune source pour le moment.</p>
    {% endif %}

    <script>
        $( document ).ready(function() {
            var ctx = $("#sourcesChart");

            var myPieChart = new Chart(ctx, {
                type: 'pie',
                data: {
                labels: [
                    {% for source in sources %}
                          '{{ source.getSource }}'{% if not loop.last %},{% endif %}
                    {% endfor %}
                      ],
                  datasets: [{
                    data: [
                        {% for source in sources %}
                            {{source.getTargets() | length }}{% if not loop.last %},{% endif %}
                        {% endfor %}
                    ]
                  }]
                },
                options: {
                	plugins: {
                        colorschemes: {
                            scheme: 'brewer.Paired12'
                        }
                    }
                }
            });
        });
    </script>

{% endblock %}
