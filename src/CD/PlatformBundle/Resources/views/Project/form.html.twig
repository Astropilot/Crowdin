{{ form_start(form, {'attr': {'class': 'form-horizontal'}}) }}

	{{ form_errors(form) }}

	<div class="form-group">
		{{ form_label(form.name, "Nom du projet", {'label_attr': {'class': 'col-sm-2 control-label'}}) }}

		{{ form_errors(form.name) }}

		<div class="col-sm-12">
		  {{ form_widget(form.name, {'attr': {'class': 'form-control'}}) }}
		</div>
	</div>

	<div class="form-group">
		{{ form_label(form.lang, "Langue du projet", {'label_attr': {'class': 'col-sm-2 control-label'}}) }}

		{{ form_errors(form.lang) }}

		<div class="col-sm-12">
		  {{ form_widget(form.lang, {'attr': {'class': 'form-control'}}) }}
		</div>
	</div>

	<div class="form-group">
		<div class="col-sm-12">
		{{ form_widget(form.save, {'attr': {'class': 'btn btn-success float-r'}}) }}
		</div>
	</div>

	{{ form_rest(form) }}

{{ form_end(form) }}
