{% extends "CDPlatformBundle::layout.html.twig" %}

{% block title %}
	Projet - {{ parent() }}
{% endblock %}

{% block cdplatform_body %}

	<h1 class="my-4">Projet
		<small>{{ project.getName() }}</small>
	</h1>

    <div class="card mb-4 ">
      <div class="card-header">Ajouter une source</div>
      <div class="card-body">

    {{ form_start(form, {'attr': {'class': 'form-horizontal'}}) }}

    	{{ form_errors(form) }}

    	<div class="form-group">
    		{{ form_label(form.source.source, "Nom de la source", {'label_attr': {'class': 'col-sm-2 control-label'}}) }}

    		{{ form_errors(form.source.source) }}

    		<div class="col-sm-12">
    		  {{ form_widget(form.source.source, {'attr': {'class': 'form-control'}}) }}
    		</div>
    	</div>

        <div class="form-group">
    		{{ form_label(form.target, "Traduction dans la langue du projet", {'label_attr': {'class': 'col-sm-4 control-label'}}) }}

    		{{ form_errors(form.target) }}

    		<div class="col-sm-12">
    		  {{ form_widget(form.target, {'attr': {'class': 'form-control'}}) }}
    		</div>
    	</div>

    	<div class="form-group">
    		<div class="col-sm-12">
    		{{ form_widget(form.save, {'attr': {'class': 'btn btn-success float-r'}}) }}
    		</div>
    	</div>

    	{{ form_rest(form) }}

    {{ form_end(form) }}
      </div>
    </div>

    <div class="card mb-4 ">
      <div class="card-header">Importer un fichier de sources</div>
      <div class="card-body">

    <form method="POST" enctype="multipart/form-data">
      <div class="form-group">
        <div class="custom-file">
          <input type="file" class="custom-file-input" id="sourcesFile" name="sourcesFile">
          <label class="custom-file-label" for="sourcesFile">Choisir un fichier CSV</label>
        </div>
      </div>
      <button type="submit" class="btn btn-primary">Envoyer</button>
    </form>
      </div>
    </div>

{% endblock %}
