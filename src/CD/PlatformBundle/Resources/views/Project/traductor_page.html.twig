{% extends "CDPlatformBundle::layout.html.twig" %}

{% block title %}
	Traduction - {{ parent() }}
{% endblock %}

{% block cdplatform_body %}
	<h1 class="my-4">Traduction
		<small>Liste des projets non traduits</small>
	</h1>

    <h2>Traduction aléatoire</h2>
    {% if (random_source) %}
        <p>Projet: {{ random_source.getProject().getName() }}</p>
        <p>Nom de la traduction: {{ random_source.getSource() }}</p>
        <p>Valeur dans la langue du projet: None</p>
    {% else %}
        <p>Pas de traduction aléatoire trouvée</p>
    {% endif %}

	<div class="table-responsive">
		<table class="table">
			<thead>
				<tr>
					<th scope="col">#</th>
					<th scope="col">Nom</th>
					<th scope="col">Date de création</th>
					<th scope="col">Nom d'utilisateur</th>
					<th scope="col">Code de langue</th>
                    <th scope="col">Actions</th>
				</tr>
			</thead>
			<tbody>
				{% for project in projects %}
					<tr>
						<th scope="row">
                        <a href="{{ path('project_show', {'id': project.id}) }}" class="btn btn-primary" role="button">{{ project.id }}</a>
                        </th>
						<td>{{ project.name }}</td>
						<td>{{ project.date|date('d/m/Y') }}</td>
						<td>{{ project.user.username }}</td>
						<td>{{ project.lang.code }}</td>
                        <td>

                        </td>
					</tr>
				{% endfor %}
			</tbody>
		</table>
		</div><br />
{% endblock %}
